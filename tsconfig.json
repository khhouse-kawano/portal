{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "NodeNext",
    "rootDir": "./src",                          
    "types": ["node"],                               
    "outDir": "./dist",                                
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"]
}
